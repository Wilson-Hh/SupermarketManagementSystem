<Application
    x:Class="SupermarketManagementSystem.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SupermarketManagementSystem"
    d1p1:Ignorable="d"
    StartupUri="/View/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator
                xmlns:vm="clr-namespace:SupermarketManagementSystem.ViewModel"
                x:Key="Locator"
                d:IsDataSource="True" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/RadioButton.xaml" />
                <ResourceDictionary Source="/Style/DataGrid.xaml" />
                <ResourceDictionary Source="/Style/TextBox.xaml" />
                <ResourceDictionary Source="/Style/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>